<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    card_view:cardBackgroundColor="#D7F541"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp">


    <ImageView
        android:id="@+id/itemIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="16dp"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/placeholder"
        card_view:layout_constraintStart_toEndOf="@+id/textView4"
        card_view:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/placeholder"
        card_view:layout_constraintStart_toEndOf="@+id/textView5"
        card_view:layout_constraintTop_toBottomOf="@+id/tvName" />

    <CheckBox
        android:id="@+id/cbBought"
        style="@style/customTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/purchased_check_box"
        card_view:layout_constraintStart_toEndOf="@+id/itemIcon"
        card_view:layout_constraintTop_toBottomOf="@+id/tvCategory" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/placeholder"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/item"
        android:textStyle="bold"
        card_view:layout_constraintBottom_toBottomOf="@+id/tvName"
        card_view:layout_constraintStart_toEndOf="@+id/itemIcon"
        card_view:layout_constraintTop_toTopOf="@+id/tvName" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/price"
        android:textStyle="bold"
        card_view:layout_constraintStart_toEndOf="@+id/itemIcon"
        card_view:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/type"
        android:textStyle="bold"
        card_view:layout_constraintStart_toEndOf="@+id/itemIcon"
        card_view:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/tvCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/placeholder"
        card_view:layout_constraintStart_toEndOf="@+id/textView"
        card_view:layout_constraintTop_toBottomOf="@+id/tvPrice" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/item_description"
        android:textSize="18sp"
        android:textStyle="bold"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/cbBought" />

</androidx.constraintlayout.widget.ConstraintLayout>